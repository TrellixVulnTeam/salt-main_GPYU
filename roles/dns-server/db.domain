$ORIGIN	{{ grains['domain'] }}.
$TTL	604800
@	IN	SOA	{{ grains['fqdn'] }}. root.{{ grains['fqdn'] }}. (
		{{ None | strftime('%Y%m%d%H%M%S') }}		; Serial
		604800		; Refresh
		86400		; Retry
		2419200		; Expire
		604800	)	; Negative Cache TTL
;
@		IN	NS	{{ grains['host'] }}.
;
{% for server, addrs in salt['mine.get']('common', 'network.ip_addrs') | dictsort() %}
{{ server }}		IN		A		{{ addrs[0] }}
{% endfor %}
