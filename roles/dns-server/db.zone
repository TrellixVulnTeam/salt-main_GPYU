$ORIGIN	{{ fqdn }}.
$TTL	604800
@	IN	SOA	{{ fqdn }}. root.{{ fqdn }}. (
		{{ salt['counter.inc']('dns-server-zone-' + fqdn) }}		; Serial
		604800		; Refresh
		86400		; Retry
		2419200		; Expire
		604800	)	; Negative Cache TTL
;
@		IN	NS	{{ fqdn }}.
;
{% for record in data -%}
{{ record['name'] }} {{ record['type'] }} {{ record['record'] }}
{% endfor %}
